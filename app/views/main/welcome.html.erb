        <h3><%= @disp_room.get_next(time).name %></h3>
        <p><%= @disp_room.get_next(time).description %></p>
      <% end %>
    </div>
    <div class="col-sm-2" id="logo">
      <div id="clock" class="clock"></div>
      <%= image_tag("m2017logo.png") %>

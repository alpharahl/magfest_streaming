          <%= @rooms[:panels_4].display_current(time) %>
        </div>
        <div class="item">
          <h1>Panels Cont.</h1>
          <h3>MAGES 1</h3>
          <%= @rooms[:mages_1].display_current(time) %>
          <h3>MAGES 2</h3>
          <%= @rooms[:mages_2].display_current(time) %>
          <h3>MAGES Forum</h3>
          <%= @rooms[:forum].display_current(time) %>
          <h3>Arena</h3>
          <%= @rooms[:arena].display_current(time) %>
        </div>
        <div class="item">
          <a href="<%= request.base_url %>/?room=Concerts&autoplay=true"><h1>Main Stage</h1></a>
          <%= @rooms[:concerts].display_current(time) %>
          <a href="<%= request.base_url %>/?room=Mega_Man-athon_5&autoplay=true"><h1>Mega Man-athon 5</h1></a>
